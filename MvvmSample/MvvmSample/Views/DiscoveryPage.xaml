<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmSample.Views.DiscoveryPage"
             xmlns:views="clr-namespace:MvvmSample.Views">
    <Grid
        RowDefinitions="*,*"
        ColumnDefinitions="*,*"
        VerticalOptions="Center"
        Padding="20">



        <views:MenuView 
            Grid.Column="0" 
            Grid.Row="0" 
            BindingContext="{Binding Bars}"
            HorizontalOptions="Center" />


        <views:MenuView 
            Grid.Column="0" 
            Grid.Row="1" 
            BindingContext="{Binding Restaurants}"
            HorizontalOptions="Center" />
        
        <views:MenuView 
            Grid.Column="1" 
            Grid.Row="0" 
            BindingContext="{Binding Places}"
            HorizontalOptions="Center" />
        
        <views:MenuView 
            Grid.Column="1" 
            Grid.Row="1" 
            BindingContext="{Binding Offices}"
            HorizontalOptions="Center" />

    </Grid>
</ContentPage>